<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/title_info_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginVertical="@dimen/setting_title"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Your profil"
        android:background="@drawable/button_radius_facebook"
        android:textColor="@color/colorBgNavBar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="@dimen/setting_subtitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/title_info_user"
        android:id="@+id/contain_info_user"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/delete_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text=" Delete your account ?"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contain_info_user" />
        <View
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_weight="1"></View>
        <androidx.appcompat.widget.AppCompatButton
            android:layout_width="40dp"
            android:layout_height="25dp"
            android:id="@+id/confirm_delete-profil"
            android:layout_marginEnd="@dimen/setting_title"
            android:background="@drawable/button_radius_facebook"
            android:textColor="@color/colorBgNavBar"
            android:text="YES">
        </androidx.appcompat.widget.AppCompatButton>
    </androidx.appcompat.widget.LinearLayoutCompat>

    <TextView
        android:id="@+id/title_notification"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginVertical="@dimen/setting_title"
        android:background="@drawable/button_radius_facebook"
        android:textColor="@color/colorBgNavBar"
        android:textAlignment="center"
        android:textSize="20sp"
        android:text="Notification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/contain_info_user" />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/title_notification"
        android:id="@+id/contain_info_nortification"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="@dimen/setting_subtitle"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text="Choise your day"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contain_info_user" />
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_monday"
            android:text="Monday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:text="Tuesday"
            android:id="@+id/notification_tuesday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_wednesday"
            android:text="Wednesday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_thursday"
            android:text="Thursday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_friday"
            android:text="Friday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_saturday"
            android:text="Saturday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <androidx.appcompat.widget.AppCompatCheckBox
            android:layout_width="wrap_content"
            android:id="@+id/notification_sunday"
            android:text="Sunday"
            android:layout_height="wrap_content">
        </androidx.appcompat.widget.AppCompatCheckBox>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="8dp"
            android:layout_marginVertical="@dimen/setting_subtitle"
            android:textAlignment="textStart"
            android:textSize="20sp"
            android:text="Choise hour for receive"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/contain_info_user" />
        <TimePicker
            android:id="@+id/timePicker"
            android:layout_width="match_parent"
            android:layout_centerHorizontal="true"
            android:timePickerMode="spinner"
            android:layout_height="wrap_content" />
    </androidx.appcompat.widget.LinearLayoutCompat>

    <com.getbase.floatingactionbutton.FloatingActionButton
        android:id="@+id/btn_refresh_restaurant"
        style="@style/Widget.MaterialComponents.FloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:clickable="false"
        android:padding="2dp"
        app:fabSize="normal"
        app:fab_colorNormal="#FAF7F7"
        android:scaleType="center"
        app:fab_icon="@drawable/ic_green_check" />

</androidx.constraintlayout.widget.ConstraintLayout>